<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_glide"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/textColor"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_glide"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_phone_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        app:layout_constraintStart_toStartOf="@id/tv_name_output"
        app:layout_constraintTop_toBottomOf="@id/tv_name_output"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textColor"
        android:drawableStart="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="@id/tv_name_output"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_output"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_webUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/website"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/custombutton"
        android:padding="10dp"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_output"
        android:layout_marginTop="40dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custombutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_webUrl"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ediProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:text="@string/edit_profile"
        android:background="@drawable/custombutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_changePassword"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:padding="10dp"
        android:text="@string/log_out"
        android:background="@drawable/custombutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_ediProfile"/>

</androidx.constraintlayout.widget.ConstraintLayout>